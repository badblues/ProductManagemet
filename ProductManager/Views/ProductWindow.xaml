<Window x:Class="ProductManager.Views.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductManager.Views"
        mc:Ignorable="d"
        Title="ProductWindow" Height="200" Width="400" ResizeMode="NoResize">
    <StackPanel>
        <Label Content="Name:"/>
        <TextBox Text="{Binding EnteredName, Mode=TwoWay}" />
        <Label Content="Price:"/>
        <TextBox Text="{Binding EnteredPrice, Mode=TwoWay}" />
        <DockPanel>
            <Button
                Content="Save"
                Command="{Binding EditCommand}"/>
            <Button
                Content="Delete"
                Command="{Binding DeleteCommand}"/>
        </DockPanel>
        <DockPanel>
            <Label Content="New UpProduct:"/>
            <ComboBox
                ItemsSource="{Binding Products}"
                DisplayMemberPath="Name"
                SelectedItem="{Binding SelectedUpProduct, Mode=TwoWay}"/>
        </DockPanel>
        <Button
            Content="Add UpProduct"
            Command="{Binding AddUpProductCommand}"/>
    </StackPanel>
</Window>
