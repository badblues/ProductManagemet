<Window x:Class="ProductManager.Views.EditCountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductManager.Views"
        mc:Ignorable="d"
        Title="EditCountWindow" Height="100" Width="400">
    <StackPanel>
        <DockPanel>
            <Label Content="Count:"/>
            <TextBox Text="{Binding EditCountText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </DockPanel>
        <Button
            Content="Save"
            Command="{Binding EditCountCommand}"/>
    </StackPanel>
</Window>
